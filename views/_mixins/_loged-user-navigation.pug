mixin site-loged-user-navigation
    nav.navbar.navbar-default
        .container-fluid.text-center
            .navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
                    span.sr-only Toggle navigation
                a.navbar-brand(href="/events") The Events Rush
            #navbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="/events/mySchedule") My Schedule
                    li
                        a(href="/categories/list") Categories
                    li
                        a(href="/categories/create") Add Category
                    li
                        a(href="/events/create") Add Event
                    li
                        form.form-inline(action="/search" method="get")
                            input.form-control(type="text" name="pattern")
                            button.btn.navbar-btn.btn-side-margin
                                span.glyphicon.glyphicon-search
                ul.nav.navbar-nav.navbar-right
                    li
                        form(action="/user/" + user._id method="get")
                            button.btn.navbar-btn.btn-side-margin
                                span.glyphicon.glyphicon-user
                                    if user.username
                                        |  #{user.username}
                                    else 
                                        | #{user.facebook.name}
                    li
                        form(action="/user/sign-out" method="post")
                            button.btn.navbar-btn.btn-side-margin
                                span.glyphicon.glyphicon-log-in
                                |  Sign Out
                            

                