mixin site-navigation
    nav.navbar.navbar-default
        .container-fluid.text-center
            .navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/") The Events Rush
            #navbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="/categories/list") Categories
                    li
                        a(href="/categories/create") Add Category
                    li
                        a(href="/events/create") Add Event
                    if user
                        li
                            form(action="/auth/sign-out" method="post")
                                button
                                    | Sign out
                        li
                            div
                                | Hello, #{user.username}!
                    else
                        li
                            a(href="/auth/sign-up") 
                                | Sign up
                        li
                            a(href="/auth/sign-in")
                                | Sign in