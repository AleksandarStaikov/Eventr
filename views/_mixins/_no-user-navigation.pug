mixin site-no-user-navigation
    nav.navbar.navbar-default
        .container-fluid.text-center
            .navbar-header
                button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="/events") The Events Rush
            #navbar-collapse.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="/categories/list") Categories
                    li
                        form.form-inline(action="/search" method="get")
                            input.form-control(type="text" name="pattern")
                            button.btn.navbar-btn.btn-side-margin
                                span.glyphicon.glyphicon-search
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="/user/sign-up") Sign up
                    li
                        a(href="/user/sign-in") Sign in
                    li
                        div
                            div
                                a.btn.navbar-btn.btn-side-margin(href="/auth/facebook")
                                    i.fa.fa-facebook
                                    | Login with Facebook