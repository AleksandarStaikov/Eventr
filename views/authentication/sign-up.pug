extends ../_layout

block content
    .row
        .col-xs-offset-1.col-xs-10.col-sm-offset-4.col-sm-4
            form(action="/auth/sign-up" method="post")
                input.form-control(type="text" name="username" placeholder="Username")
                input.form-control(type="text" name="password" placeholder="Password")
                input.form-control(type="text" name="passwordRepeat" placeholder="Repeat the password")
                input.form-control(type="text" name="email" placeholder="Email")
                button.btn.btn-danger.col-xs-12
                    | Sign up